@model SensorResearch.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
            <h2 class="form-signin-heading">Пожалуйста зарегистрируйтесь</h2>
            @Html.TextBoxFor(m => m.UserName, new { @class="form-control", placeholder = "Login пользователя", autofocus=""})
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.TextBoxFor(m => m.LastName, new { @class="form-control", placeholder = "Фамилия", autofocus=""})
            @Html.ValidationMessageFor(m => m.LastName)
            @Html.PasswordFor(m => m.GroupNumber, new { @class="form-control", placeholder = "Номер группы", autofocus=""})
            @Html.ValidationMessageFor(m => m.GroupNumber)
            @Html.PasswordFor(m => m.Password, new { @class="form-control", placeholder = "Пароль", autofocus=""})
            @Html.ValidationMessageFor(m => m.Password)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class="form-control", placeholder = "Подтвердите пароль", autofocus=""})
            @Html.ValidationMessageFor(m => m.Password)
        <button class="btn btn-lg btn-primary btn-block" type="submit">Регистрация</button>
    }
   </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
